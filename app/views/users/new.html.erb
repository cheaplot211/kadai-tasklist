<h1>ユーザー登録画面</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  
  <%= f.label :name, '名前' %>
  <%= f.text_field :name %>
  
  <%= f.label :email, 'メール' %>
  <%= f.email_field :email %>
  
  <%= f.label :password, 'パスワード' %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation, '確認' %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.submit '送信' %>
<% end %>
  